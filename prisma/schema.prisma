generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  INACTIVE
}

model Campaign {
  id          String     @id @default(cuid())
  name        String
  industry    String
  audience    String
  tone        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  headlines   Headline[]
  images      Image[]
  creatives   Creative[]
}

model Headline {
    id         String     @id @default(cuid())
    text       String
    campaignId String
    status     Status     @default(ACTIVE)
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt

    campaign   Campaign   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
    creatives  Creative[]

    @@index([campaignId])
}

model Image {
  id         String     @id @default(cuid())
  imageUrl   String
  prompt     String
  campaignId String
  status     Status     @default(ACTIVE)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  campaign   Campaign   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  creatives  Creative[]

  @@index([campaignId])
}

model Creative {
  id         String   @id @default(cuid())
  headlineId String
  imageId    String
  campaignId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  headline   Headline @relation(fields: [headlineId], references: [id], onDelete: Cascade)
  image      Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([headlineId, imageId])
  @@index([campaignId])
}